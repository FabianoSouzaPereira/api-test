{
  "compilerOptions": {
    "target": "es6",
    "outDir": "./dist/",
    "sourceMap": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "typings/global",
    "typings/index.d.ts",
    "**/*.spec.ts",
    ".yarn/releases/*",
    "**/__tests__/**/*",
    "**/__mocks__/**/*",
    "**/build/**/*",
    "*.test.js",
    "*.test.tsx"
  ],
}